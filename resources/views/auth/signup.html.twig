{% extends "templates/app.html.twig" %}

{% block content %}

	<div class="row">
		
		<div class="col-md-6 col-md-offset-3">
			
			<div class="panel panel-default">
				
				<div class="panel-heading">Sign up</div>

				<div class="panel-body">
					
					<form action="{{ path_for("auth.signup") }}" method="POST">

						<div class="form-group {{ errors.name ? 'has-error' : '' }}">
							
							<label for="name">Name</label>
							<input class="form-control" type="name" name="name" id="name" placeholder="Name" value="{{ oldInput.name }}">
	
							{% if errors.name %}
								<span class="help-block">
									<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>

									{{ errors.name | first }}
								</span>
							{% endif %}

						</div>

						<div class="form-group {{ errors.surname ? 'has-error' : '' }}">
							
							<label for="surname">Surname</label>
							<input class="form-control" type="surname" name="surname" id="surname" placeholder="Surname" value="{{ oldInput.surname }}">

							{% if errors.surname %}
								<span class="help-block">
									<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>

									{{ errors.surname | first }}
								</span>
							{% endif %}

						</div>

						<div class="form-group {{ errors.email ? 'has-error' : '' }}">
							
							<label for="email">Email</label>
							<input class="form-control" type="email" name="email" id="email" placeholder="Email" value="{{ oldInput.email }}">

							{% if errors.email %}
								<span class="help-block">
									<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>

									{{ errors.email | first }}
								</span>
							{% endif %}

						</div>

						<div class="form-group {{ errors.password ? 'has-error' : '' }}">
							
							<label for="password">Password</label>
							<input class="form-control" type="password" name="password" id="password" placeholder="Password">

							{% if errors.password %}
								<span class="help-block">
									<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>

									{{ errors.password | first }}
								</span>
							{% endif %}

						</div>

						<button class="btn btn-default" type="submit">Sign Up!</button>

					</form>

				</div>

			</div>

		</div>

	</div>

{% endblock %}